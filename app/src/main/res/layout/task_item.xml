<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.example.hw16.model.TaskItemUiState"/>
        <variable
            name="task"
            type="TaskItemUiState" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/task_item_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        app:cardCornerRadius="18dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:orientation="vertical">

            <ImageView
                android:adjustViewBounds="true"
                android:maxHeight="120dp"
                android:scaleType="fitXY"
                app:image='@{task.image_uri}'
                android:src="@drawable/loading_animation"
                app:isVisible='@{task.image_uri != null}'
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.google.android.material.textview.MaterialTextView
                style="@style/MyTextView"
                android:maxLines="2"
                android:textSize="22sp"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text='@{task.title, default="Doing signal home work"}'/>


            <com.ms.square.android.expandabletextview.ExpandableTextView
                android:id="@+id/expandable"
                style="@style/MyTextView"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:animDuration="100"
                app:maxCollapsedLines="3"
                app:setText='@{task.description}'>

                <TextView
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:id="@id/expandable_text"
                    android:textSize="19sp"
                    android:textColor="#8C000000"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <ImageButton
                    android:id="@id/expand_collapse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:background="@android:color/transparent"/>

            </com.ms.square.android.expandabletextview.ExpandableTextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                style="@style/MyTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="16sp"
                android:text='@{task.deadline, default="2022/03/00   05:92"}'/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>